
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var listNewPosts = (List<Model.EF.Post>)ViewBag.NewPosts;
    var listFeaturePosts = (List<Model.EF.Post>)ViewBag.ListFeaturePosts;
}



<div class="content">
    <div class="content_top">
        <div class="heading">
            <h3>Bài Đăng Mới</h3>
        </div>
        <div class="see">
            <p><a href="/Post">Xem Tất Cả</a></p>
        </div>
        <div class="clear"></div>
    </div>
</div>
<section class="elementor-element elementor-element-275372a0 elementor-section-boxed elementor-section-height-default elementor-section-height-default elementor-section elementor-top-section" data-element_type="section">
    <div class="elementor-container elementor-column-gap-default">
        <div class="elementor-row">
            <div class="elementor-element elementor-element-67091cbb elementor-column elementor-col-100 elementor-top-column" data-element_type="column">
                <div class="elementor-column-wrap  elementor-element-populated">
                    <div class="elementor-widget-wrap">
                        <div class="elementor-element elementor-element-102178eb elementor-grid-2 elementor-posts--align-center elementor-grid-tablet-2 elementor-grid-mobile-1 elementor-posts--thumbnail-top elementor-posts--show-avatar elementor-card-shadow-yes elementor-posts__hover-gradient elementor-widget elementor-widget-posts"  data-widget_type="posts.cards">
                            <div class="elementor-widget-container">
                                <div class="elementor-11012 elementor-element elementor-element-102178eb elementor-posts-container">
                                    @foreach (var item in listNewPosts)
                                    {
                                        var url = "/Detail/" + item.MetaTitle + "-" + item.ID;
                                        <article class="elementor-post elementor-grid-item post-808 post type-post status-publish format-standard has-post-thumbnail hentry category-content-marketing tag-freelance-writing">
                                            <div class="elementor-post__card">
                                                <a class="elementor-post__thumbnail__link" href="@url">
                                                    <div class="elementor-post__thumbnail">
                                                         <img src="@item.Image" alt="@item.Title" /><noscript><img src="@item.Image" alt="@item.Title" /></noscript>
                                                    </div>
                                                </a>
                                                @*<div class="elementor-post__avatar">
                                                    <img src="@item.Image" alt="@item.Title" /><noscript><img src="@item.Image" alt="@item.Title" /></noscript>
                                                </div>*@
                                                <div class="elementor-post__text">
                                                    <h3 class="elementor-post__title">
                                                        <a href="@url">@item.Title</a>
                                                    </h3>
                                                </div>
                                                <div class="elementor-post__meta-data">
                                                    <span class="elementor-post-author">
                                                        Jon Morrow
                                                    </span>
                                                    <span class="elementor-post-avatar">
                                                        257 Comments
                                                    </span>
                                                </div>
                                            </div>
                                        </article>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

